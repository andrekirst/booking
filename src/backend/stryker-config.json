{
  "stryker-config": {
    "project": "Booking.Api.csproj",
    "test-projects": [
      "Booking.Api.Tests.csproj"
    ],
    "mutation-level": "Standard",
    "thresholds": {
      "high": 80,
      "low": 60,
      "break": 50
    },
    "mutate": [
      "**/*.cs",
      "!**/Migrations/**",
      "!**/bin/**",
      "!**/obj/**",  
      "!**/Program.cs",
      "!**/appsettings*.json",
      "!**/*.Designer.cs",
      "!**/GlobalAssemblyInfo.cs"
    ],
    "reporters": [
      "Progress",
      "Html",
      "Json"
    ],
    "concurrency": 2,
    "additional-timeout": 10000,
    "verbosity": "info"
  }
}