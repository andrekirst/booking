# Environment Variables Example File
# Copy this file to .env and modify values as needed
# Note: .env files are not automatically loaded in .NET applications
# This file serves as documentation and can be used with tools like docker-compose

# =============================================================================
# SEEDING CONFIGURATION
# =============================================================================

# Master switch for all seeding operations
# Set to false to completely disable seeding
SeedingSettings__EnableSeeding=true

# Enable basic seeding (admin user, essential data)
# Recommended to keep true in all environments
SeedingSettings__EnableBasicSeeding=true

# Enable comprehensive test data seeding (users, accommodations, bookings)
# Should be true only in development/testing environments
SeedingSettings__EnableComprehensiveSeeding=true

# Force comprehensive seeding even in production environments
# DANGER: Use with extreme caution, never set to true in production
SeedingSettings__ForceComprehensiveSeeding=false

# Enable detailed seeding logs
# Useful for debugging seeding issues
SeedingSettings__EnableSeedingLogs=true

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Primary database connection string
ConnectionStrings__DefaultConnection="Host=localhost;Port=5432;Database=booking_dev;Username=booking_user;Password=your_password_here"

# =============================================================================
# JWT CONFIGURATION
# =============================================================================

# JWT signing secret (minimum 256 bits)
JwtSettings__Secret="your-super-secret-jwt-key-minimum-256-bits-long"
JwtSettings__Issuer="BookingApi"
JwtSettings__Audience="BookingApp"
JwtSettings__ExpirationMinutes="480"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================

EmailSettings__BaseUrl="http://localhost:3000"
EmailSettings__SmtpHost="smtp.example.com"
EmailSettings__SmtpPort="587"
EmailSettings__SmtpUser="your-smtp-user"
EmailSettings__SmtpPassword="your-smtp-password"
EmailSettings__FromEmail="noreply@booking-app.local"
EmailSettings__FromName="Booking System"

# =============================================================================
# CORS CONFIGURATION
# =============================================================================

# Note: For arrays, use indexed notation
CorsSettings__AllowedOrigins__0="http://localhost:3000"
CorsSettings__AllowedOrigins__1="https://localhost:3001"
CorsSettings__AllowCredentials="true"
CorsSettings__PolicyName="Development"

# =============================================================================
# ENVIRONMENT-SPECIFIC EXAMPLES
# =============================================================================

## DEVELOPMENT ENVIRONMENT
# ASPNETCORE_ENVIRONMENT=Development
# SeedingSettings__EnableSeeding=true
# SeedingSettings__EnableBasicSeeding=true
# SeedingSettings__EnableComprehensiveSeeding=true
# SeedingSettings__ForceComprehensiveSeeding=false
# SeedingSettings__EnableSeedingLogs=true

## STAGING ENVIRONMENT
# ASPNETCORE_ENVIRONMENT=Staging
# SeedingSettings__EnableSeeding=true
# SeedingSettings__EnableBasicSeeding=true
# SeedingSettings__EnableComprehensiveSeeding=false
# SeedingSettings__ForceComprehensiveSeeding=false
# SeedingSettings__EnableSeedingLogs=true

## PRODUCTION ENVIRONMENT
# ASPNETCORE_ENVIRONMENT=Production
# SeedingSettings__EnableSeeding=true
# SeedingSettings__EnableBasicSeeding=true
# SeedingSettings__EnableComprehensiveSeeding=false
# SeedingSettings__ForceComprehensiveSeeding=false
# SeedingSettings__EnableSeedingLogs=false

## TESTING ENVIRONMENT (CI/CD)
# ASPNETCORE_ENVIRONMENT=Testing
# SeedingSettings__EnableSeeding=true
# SeedingSettings__EnableBasicSeeding=true
# SeedingSettings__EnableComprehensiveSeeding=true
# SeedingSettings__ForceComprehensiveSeeding=true
# SeedingSettings__EnableSeedingLogs=true

## DISABLE ALL SEEDING
# SeedingSettings__EnableSeeding=false
# All other seeding settings will be ignored when this is false